        app:layout_constraintBottom_toTopOf="@+id/card10View"
        app:layout_constraintStart_toEndOf="@+id/card5View"
        app:layout_constraintEnd_toStartOf="@+id/card7View"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/card7View"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/emojipattern"
        app:layout_constraintTop_toBottomOf="@+id/card3View"
        app:layout_constraintBottom_toTopOf="@+id/card11View"
        app:layout_constraintStart_toEndOf="@+id/card6View"
        app:layout_constraintEnd_toStartOf="@+id/card8View"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/card8View"
        android:layout_width="75dp"
        android:layout_height="75dp"
