        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/card14View"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/card14View"
        android:layout_width="75dp"
